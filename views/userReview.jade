html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='')
        meta(name='author', content='')
        //link(rel='icon', type ='image/x-icon',href='/images/favicon.ico')
        title 고객센터
        //Bootstrap core CSS
        link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        //Add custom CSS here
        link(href='/stylesheets/userReview.css', rel='stylesheet', type='text/css')
    body(style='')
        nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
            .col-md-6.col-md-offset-3.navDiv
                if (login === true)
                    button.btn.btn-lg.btn-block.logout(onclick='location.href=\'/user/logout\';')  로그아웃
                #title(onclick = 'toMain()')
                    | 넥스트익명게시판
                button.btn.btn-lg.btn-block.user(onclick='location.href=\'/user/review\';')  고객센터
        .container
            .row
                .review.col-md-6.col-md-offset-3
                    #userReview
                        h2
                            | 개선사항 및 의견
                        form.writeReview(method ='post', role='form', action = '/user/review/add')
                            textarea#reviewTextArea.simple(rows='3', cols='60', type='text', name='body')

                            .form-actions
                                button#writeButton.btn.btn-lg.btn-primary.btn-block(type='submit')  의견 보내기
                    if (login === true)
                        button#closeAccountButto.btn.btn-lg.btn-danger.btn-block(onclick='location.href=\'/user/closeAccount\';')  회원탈퇴
        //JavaScript
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
        script(src='/javascripts/userReview.js')
        script(src='/javascripts/googleAnalytics.js')